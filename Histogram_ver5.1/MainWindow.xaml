                                                <TextBlock TextWrapping="WrapWithOverflow">Default</TextBlock>
                                            </RadioButton>
                                            <RadioButton x:Name="Scanning_SP_Parameters_EXPNDR_Norma_GB_FilterMenu_SP_Brightness_RB"
                                                         Style="{StaticResource RB}"
                                                         Checked="Scanning_SP_Parameters_EXPNDR_Norma_GB_FilterMenu_SP_Brightness_RB_Checked">
