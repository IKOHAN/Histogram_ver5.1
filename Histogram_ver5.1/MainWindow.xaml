                                   Grid.RowSpan="5"
                                   Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" />
                        <Label Grid.Row="0"
                               Grid.Column="1"
                               Grid.ColumnSpan="2"
                               Style="{StaticResource Layout1}">
                            <TextBlock>Processing</TextBlock>
                        </Label>
                        <Separator Grid.Row="1"
                                   Grid.Column="1"
                                   Grid.ColumnSpan="2" />
