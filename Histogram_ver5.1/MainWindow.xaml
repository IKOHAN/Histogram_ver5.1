                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <ComboBox x:Name="Displaying_SP_Channel_CBOX"
                                  Grid.Column="0"
                                  HorizontalAlignment="Stretch"
                                  VerticalAlignment="Stretch"
                                  Selector.SelectionChanged="Displaying_SP_Channel_CBOX_SelectionChanged"
                                  Style="{StaticResource {x:Static ToolBar.ComboBoxStyleKey}}">
                            <ComboBoxItem Selector.IsSelected="True">
                                <TextBlock Style="{StaticResource myText}">Choose<LineBreak />channel</TextBlock>
                            </ComboBoxItem>
                        </ComboBox>
                        <Separator Grid.Column="1"
                                   Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" />
                        <ComboBox x:Name="Displaying_SP_Segment_CBOX"
                                  Grid.Column="2"
                                  HorizontalAlignment="Stretch"
                                  VerticalAlignment="Stretch"
                                  Selector.SelectionChanged="Displaying_SP_Segment_CBOX_SelectionChanged"
                                  Style="{StaticResource {x:Static ToolBar.ComboBoxStyleKey}}">
                            <ComboBoxItem Selector.IsSelected="True">
                                <TextBlock Style="{StaticResource myText}">Choose<LineBreak />segment</TextBlock>
                            </ComboBoxItem>
                        </ComboBox>
                    </Grid>
                </StackPanel>
                <StackPanel x:Name="Mode_SP"
                            Grid.Row="10"
                            Grid.Column="1"
                            Grid.ColumnSpan="2">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <RadioButton x:Name="Mode_SP_RGB_RB"
                                     Grid.Column="0"
                                     Margin="5"
                                     IsChecked="True"
                                     Checked="Mode_SP_RGB_RB_Checked"
                                     Style="{StaticResource RB}">
                            <TextBlock>RGB</TextBlock>
                        </RadioButton>
                        <RadioButton x:Name="Mode_SP_HSV_RB"
                                     Grid.Column="1"
                                     Margin="5"
                                     Checked="Mode_SP_HSV_RB_Checked"
                                     Style="{StaticResource RB}">
                            <TextBlock>HSV</TextBlock>
                        </RadioButton>
                    </Grid>
                </StackPanel>
            </Grid>
