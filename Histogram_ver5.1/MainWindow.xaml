                                                         Style="{StaticResource RB}"
                                                         Checked="Scanning_SP_Parameters_EXPNDR_Norma_GB_FilterMenu_SP_Manhatten_RB_Checked">
                                                <TextBlock TextWrapping="WrapWithOverflow">Manhatten</TextBlock>
                                            </RadioButton>
                                            <RadioButton x:Name="Scanning_SP_Parameters_EXPNDR_Norma_GB_FilterMenu_SP_Max_RB"
