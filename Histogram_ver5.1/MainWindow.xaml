                                        <StackPanel Name="Scanning_SP_Parameters_EXPNDR_Norma_GB_Threshold_SP"
                                                    Grid.Column="1"
                                                    Width="0">
                                            <TextBlock TextWrapping="WrapWithOverflow">Input threshold value in percent:</TextBlock>
                                            <TextBox x:Name="Scanning_SP_Parameters_EXPNDR_Norma_GB_Threshold_SP_FilterValue_TB"
