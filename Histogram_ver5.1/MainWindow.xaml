                                                </TextBox.Background>
                                            </TextBox>
                                            <Button x:Name="Scanning_SP_Parameters_EXPNDR_Norma_GB_Threshold_SP_Accept_BTN"
                                                    Style="{StaticResource myBtntrue}"
